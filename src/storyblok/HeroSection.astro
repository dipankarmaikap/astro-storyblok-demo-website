---
import { storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
---

<section
  {...storyblokEditable(blok)}
  class="min-h-[500px] bg-red-500 text-white flex"
  style={{ background: blok.bg_color.color }}
>
  <div
    class="container mx-auto flex items-center justify-center w-full flex-col"
  >
    <h1 class="text-7xl font-black mb-8">{blok.title}</h1>
    <a
      class="border rounded-full p-2 px-8 hover:bg-white hover:text-gray-900"
      href={"/" + blok.action.cached_url}>Contat us</a
    >
  </div>
</section>
